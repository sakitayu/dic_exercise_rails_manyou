<h2>タスクを編集する</h2>

<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="task_name">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="task_detail">
    <%= form.label :detail %>
    <%= form.text_field :detail %>
  </div>
  <div class="task_expired_at">
    <%= form.label :expired_at %>
    <%= form.datetime_select :expired_at, {} %>
  </div>
  <div class="task_status">
    <%= form.label :status %>
    <%= form.select :status, ['未着手', '着手中', '完了'], {} %>
  </div>
  <div class="task_priority">
    <%= form.label :priority %>
    <%= form.select :priority, Task.priorities.keys.to_a %>
  </div>
  <%= form.submit %>
<% end %>

<%= link_to "タスク一覧画面にもどる", tasks_path %>